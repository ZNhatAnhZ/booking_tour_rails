<div class="colorlib-loader"></div>
<div id="page">
  <aside id="colorlib-hero">
    <div class="flexslider">
      <ul class="slides">
        <li class="tourshow_background">
          <div class="overlay"></div>
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                <div class="slider-text-inner text-center">
                  <h1><%= t ".find_Tours" %></h1>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </aside>
  <div class="colorlib-wrap">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <div class="wrap-division">
                <div class="col-md-12 col-md-offset-0 heading2 animate-box">
                  <h2><%= @tour.name %></h2>
                </div>
                <div class="row">
                  <div class="col-md-12 animate-box">
                    <div class="room-wrap">
                      <div class="row">
                        <div class="col-md-6 col-sm-6">
                          <div class="room-img">
                            <%= image_tag @tour.image %>
                          </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                          <div class="desc">
                            <p class="star"><span> <%= sanitize render_star(@tour.avg_rating), attributes: %w(class data-icon) %> </span></p>
                            <h2><%= @tour.description %></h2>
                            <div class="row">
                              <p class="price col-sm-6">
                                <span><%= number_to_currency @tour.price %></span>
                                <small> / <%= date_diff @tour.start_date, @tour.end_date %> <%= t(".day") %></small>
                              </p>
                              <h4 class="col-sm-6 stock"><%= t ".stock" %> <span id="tour_stock"><%= @tour.stock %></span></h4>
                            </div>
                            <div class="col-md-6">
                              <div class="form-group">
                                <div class="form-field">
                                  <span> <%= t ".start_date" %> </span>
                                  <%= date_field :start_date, "", class: "form-control", value: @tour.start_date.strftime("%F"), disabled: true %>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="form-group">
                                <div class="form-field">
                                  <span> <%= t ".end_date" %> </span>
                                  <%= date_field :end_date, "", class: "form-control", value: @tour.end_date.strftime("%F"), disabled: true %>
                                </div>
                              </div>
                            </div>
                            <%= render "booking" if current_user&.activated? %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <%= render "reviews/form" if current_user %>
          </div>
          <div class="row">
            <div id="container">
              <%= render @reviews %>
            </div>
            <div class="col-sm-12">
              <hr>
              <div id="pagy_container">
                <%== pagy_bootstrap_nav_js @pagy %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
